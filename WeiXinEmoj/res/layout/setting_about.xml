<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <ImageView
    android:src="@drawable/welcome_textview_background"     
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
     
     <TextView 
    android:text=""
    android:id="@+id/setting_about_notice"
  	android:textSize="@dimen/BasicTextSize"
  	android:textColor="@color/black"
    android:lineSpacingMultiplier="1.5"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
	    
     <Button android:visibility="gone" android:layout_marginTop="10dp" android:gravity="center" style="@style/leba_bg_base_layout" android:textColor="@color/black" android:id="@+id/setting_about_btnscore" android:background="@drawable/btn_selector" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="如果你喜欢这个应用,就来评价一下吧"  />
     <TextView 
    android:text="@string/about2"  
    android:textSize="@dimen/BasicTextSize"
  	android:textColor="@color/black"
    android:gravity="bottom|center"
    android:lineSpacingMultiplier="1.2"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/> 
       
</LinearLayout>