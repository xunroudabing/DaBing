<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dabing="http://schemas.android.com/apk/res/com.dabing.emoj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >
	<LinearLayout
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="@drawable/mm_title_bg">

	    <TextView
		    android:id="@+id/umeng_fb_goback_btn"
			style="@style/MMTitleButton"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:textColor="#fff"
        	android:background="@drawable/mm_title_btn_back"
		    android:text="微信"/>		
		<LinearLayout
		    android:layout_weight="1.0"
		    android:gravity="center"
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
		    <TextView android:id="@+id/umeng_fb_conversation_title"
		    style="@style/MMTitle"
		    android:layout_toLeftOf="@id/sort_btn"
		    android:layout_toRightOf="@id/umeng_fb_goback_btn"
		    android:layout_centerInParent="true"
			android:text="@string/title_custom"/>
		</LinearLayout>   			   	 
		<ProgressBar      
			android:id="@+id/user_define_progressBar"
			style="@android:style/Widget.ProgressBar.Small.Inverse"
			android:visibility="gone"
			android:layout_centerVertical="true"
			android:layout_marginRight="2dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></ProgressBar>
		<TextView android:id="@+id/sort_btn"
			style="@style/MMTitleButton"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:text="@string/btn_userdefine_edit"
			android:textColor="#fff"
			android:background="@drawable/mm_title_btn_right" />				 
	</LinearLayout>
    <LinearLayout 
    android:id="@+id/user_define_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        
    </LinearLayout>
    
</LinearLayout>