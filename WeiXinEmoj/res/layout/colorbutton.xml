<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    
	<TextView
	android:id="@+id/color_button_txt"
	android:layout_centerInParent="true"
	android:gravity="center"
	android:text=""
	android:background="@drawable/textview_gray_selector"
	android:textSize="@dimen/LargerTextSize"
	android:textColor="@color/white"
	android:padding="7dp"     
	android:lines="1"
	android:ellipsize="marquee"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"  />
	
	<ImageView
	android:id="@+id/color_button_img"
	android:visibility="gone"
	android:src="@drawable/right_corner"
	android:layout_alignParentTop="true"
	android:layout_alignRight="@id/color_button_txt"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>