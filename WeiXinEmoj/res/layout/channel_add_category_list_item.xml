<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dabing="http://schemas.android.com/apk/res/com.dabing.emoj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/channel_add_category_list_item_bg"
    android:orientation="vertical" >
    
	<LinearLayout
	android:orientation="horizontal"	
	android:paddingLeft="10dp"
	android:paddingTop="5dp"
	android:paddingRight="10dp"
	android:layout_width="match_parent"
    android:layout_height="wrap_content">
	    <TextView
	    android:id="@+id/channel_add_category_list_item_title"    
	    android:text="标题1"   
	    android:textColor="@color/black"
	    android:textSize="@dimen/TitleTextSize"  
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" />
	</LinearLayout>
	
	<RelativeLayout
	android:layout_marginTop="5dp"  
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp"
	android:layout_width="match_parent"
    android:layout_height="wrap_content">
	    <com.dabing.emoj.widget.FitSizeAsyncImageView
	    android:id="@+id/channel_add_category_list_item_img1"
	    dabing:defaultSrc="@color/gray_light"    
	    dabing:inDensity="hdpi"
	    android:layout_alignParentLeft="true"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" />
	    
	    <com.dabing.emoj.widget.FitSizeAsyncImageView
	    android:id="@+id/channel_add_category_list_item_img2"
	    dabing:defaultSrc="@color/gray_light"    
	    dabing:inDensity="hdpi"
	    android:layout_toRightOf="@id/channel_add_category_list_item_img1"
	    android:layout_alignTop="@id/channel_add_category_list_item_img1"
	    android:layout_marginLeft="5dp"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" />
	    
	    <com.dabing.emoj.widget.FitSizeAsyncImageView
	    android:id="@+id/channel_add_category_list_item_img3"
	    dabing:defaultSrc="@color/gray_light"    
	    dabing:inDensity="hdpi"
	    android:layout_toRightOf="@id/channel_add_category_list_item_img1"
	    android:layout_alignBottom="@id/channel_add_category_list_item_img1"
	    android:layout_marginLeft="5dp"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" />
	</RelativeLayout>
	
	<Button
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:text="订阅"
	    android:background="@drawable/albums_icon_bg" 
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" />
</LinearLayout>