<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
	<com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        ptr:ptrHeaderBackground="@drawable/app_panel_bg"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextAppearance="@style/PullToRreshMessage"
        ptr:ptrMode="pullFromStart" >

        <com.dabing.emoj.widget.CustomGridLayout
            android:id="@+id/gridContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    <ImageView 
    android:id="@+id/user_define_fragment1_nosdcard"         
    android:visibility="gone"
    android:src="@drawable/nosdcard_chatting_bg"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</LinearLayout>